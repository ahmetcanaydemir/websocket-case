<%- include('header'); %>
  <div class="login-form container" style="max-width: 500px;">
   <h1>Giriş Yap</h1>
   <%if (errors.length > 0) { %>
   <div class="alert alert-danger" role="alert">
    <ul>
      <% errors.forEach(function(error){ %>
          <li><%= error.msg %></li>
      <%  }); %>
    </ul>
   </div>
   <% } %>
   <form action="/login" method="post">
    <div class="form-group" >
      <label for="exampleInputEmail1">Eposta Adresi</label>
      <input type="email" name="email" class="form-control" id="email" value="<%= body.email %>">
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Şifre</label>
      <input type="password" name="password" class="form-control" id="<%= body.password %>">
    </div>
    <div>
      <button type="submit" class="btn btn-primary mt-4 w-100">Giriş Yap</button>
    </div>  
    <div class="text-center mt-3">
      <a href="/register">Kayıt ol</a>
    </div>
  </form>
  </div>
</body>
</html>
