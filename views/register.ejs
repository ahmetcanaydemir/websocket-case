<%- include('header'); %>
  <div class="login-form container" style="max-width: 500px;">
   <h1>Kayıt Ol</h1>
   <%if (errors.length > 0) { %>
   <div class="alert alert-danger" role="alert">
    <ul>
      <% errors.forEach(function(error){ %>
          <li><%= error.msg %></li>
      <%  }); %>
    </ul>
   </div>
   <% } %>
   <form action="/register" method="post">
    <div class="row">
      <div class="form-group col-md-6">
        <label for="firstName">İsim</label>
        <input type="text" class="form-control" id="firstName" name="firstName" value="<%= body.firstName %>" >
      </div>
      <div class="form-group col-md-6">
        <label for="lastName">Soyisim</label>
        <input type="text" class="form-control" id="lastName" name="lastName" value="<%= body.lastName %>">
      </div>
    </div>
    <div class="form-group" >
      <label for="email">Eposta Adresi</label>
      <input type="email" class="form-control" id="email" name="email" value="<%= body.email %>">
    </div>
    <div class="form-group">
      <label for="password">Şifre</label>
      <input type="password" class="form-control" id="password" name="password" value="<%= body.password %>">
    </div>
    <div class="form-group">
      <label for="passwordConfirmation">Şifre Tekrar</label>
      <input type="password" class="form-control" id="passwordConfirmation" name="passwordConfirmation" value="<%= body.passwordConfirmation %>">
    </div>
    <div class="row">
      <div class="form-group col-md-6">
        <label for="language">Dil</label>
        <input type="text" class="form-control" id="language" name="language" value="<%= body.language %>">
      </div>
      <div class="form-group col-md-6">
        <label for="country">Ülke</label>
        <input type="text" class="form-control" id="country" name="country" value="<%= body.country %>">
      </div>
    </div>
    <div>
      <button type="submit" class="btn btn-primary mt-4 w-100">Kayıt Ol</button>
    </div>  
    <div class="text-center mt-3">
      <a href="/"><- Giriş yap</a>
    </div>
  </form>
  </div>
</body>
</html>
